@page "/userregistration"
@rendermode InteractiveServer
@inject NavigationManager navigationManager
@inject WebShopHandler wsh


<PageTitle>Log in</PageTitle>
<WebshopHeader></WebshopHeader>

@if (wsh.existingUser is true)
{
    <LogInForm OnGoToRegistration="ChangeRegistrationForm"></LogInForm>
}
else
{
    <UserRegistrationForm OnGoToLogIn="ChangeRegistrationForm"></UserRegistrationForm>
}

